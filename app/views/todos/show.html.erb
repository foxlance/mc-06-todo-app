<h2><%= @todo.title %></h2>
<p><%= @todo.description %></p>

<div>
	<% @todo.items.each do |item| %>
	<p><%= item.content %></p>
	<p>
		<%= link_to "Mark as compete", '#' %>
		<%= link_to "Delete", todo_item_path(@todo, item), method: :delete, data: {confirm: "Are you sure?"} %>
	</p>
	<% end %>
</div>

<div>
	<%= render 'items/form' %>
</div>

<p>
<%= link_to "Edit", edit_todo_path %>
<%= link_to "Destroy", todo_path, method: :delete, data: {confirm: "Are you sure?"} %>
</p>